<div class="login-container">
  <% if @is_valid_token %>
    <%= form_with url:"/users/#{@user_id}", method: :put do |f| %>
    <div>
      <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div>
      <%= f.submit "Confirm", class: "btn btn-success" %>
    </div>
  <% end %>
  <% else %>
  <p>Invalid Token</p>
<% end %>

</div>
